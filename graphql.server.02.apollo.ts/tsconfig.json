{
    "compilerOptions": {
        "module": "NodeNext", // Use ES modules for modern imports/exports ESNext
        "target": "ES2020", // Target a modern ECMAScript version
        "moduleResolution": "NodeNext", // Ensure Node.js-style module resolution
        "sourceMap": true,
        "outDir": "dist", // Output compiled files in the dist folder
        "rootDir": "src", // Source files are in the src folder
        "esModuleInterop": true, // Allows interoperability between CommonJS and ES modules
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2020"
        ],
        "rootDirs": [
            "src"
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}